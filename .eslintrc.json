{
  "plugins": ["prettier"],
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "env": {
    "es6": true,
    "browser": true,
    "jest": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2021
  },
  "rules": {
    "no-unused-vars": "warn",
    "arrow-parens": ["error", "always"]  // Добавляем правило для стрелочных функций
  },
  "overrides": [
    {
      "files": ["jest.config.js"],
      "env": {
        "node": true
      }
    }
  ]
}
